<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">
    <link rel='stylesheet' type="text/css" href='/public/css/style.css' />
    <script defer src ="/public/js/frontendjs.js"></script>  
  </head>
  <body> 
    <div id ="container">
      {{> banner}}
      {{> nav-bar}}
      {{#if (emptyObject messages)}}
      {{>flashmessage}}
      {{/if}}
      {{{body}}}
      {{>footer}}
    </div>

    {{#if logged}}
      <script>
        let ele = document.getElementById("logout-button");
        if(ele){
          ele.onclick = (even) =>{
            fetch('/users/logout',{
              method:"POST"
            })
            .then((data)=>{
              location.replace('/');
            })
          }
        }
      </script>
    {{/if}}
  </body>
</html>
